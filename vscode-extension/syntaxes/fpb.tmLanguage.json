{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "FPB",
  "scopeName": "source.fpb",
  "fileTypes": [".fpb"],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#block-delimiters"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#connection-operators"
    },
    {
      "include": "#braces"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#identifiers"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.fpb",
          "match": "//.*$",
          "comment": "Line comment starting with //"
        }
      ]
    },
    "block-delimiters": {
      "patterns": [
        {
          "name": "keyword.control.fpb",
          "match": "@(startfpb|endfpb)\\b",
          "comment": "Block start and end delimiters"
        },
        {
          "name": "keyword.annotation.fpb",
          "match": "@(boundary|internal)\\b",
          "comment": "Placement annotations for states"
        }
      ]
    },
    "braces": {
      "patterns": [
        {
          "name": "punctuation.definition.block.fpb",
          "match": "[{}]",
          "comment": "Braces for system blocks"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.fpb",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.fpb",
              "match": "\\\\."
            }
          ],
          "comment": "Double-quoted string"
        }
      ]
    },
    "connection-operators": {
      "patterns": [
        {
          "name": "keyword.operator.connection.usage.fpb",
          "match": "<\\.\\.>",
          "comment": "Usage connection operator"
        },
        {
          "name": "keyword.operator.connection.alternative.fpb",
          "match": "-\\.->",
          "comment": "Alternative flow connection operator"
        },
        {
          "name": "keyword.operator.connection.parallel.fpb",
          "match": "==>",
          "comment": "Parallel flow connection operator"
        },
        {
          "name": "keyword.operator.connection.flow.fpb",
          "match": "-->",
          "comment": "Flow connection operator"
        }
      ],
      "comment": "Connection operators (order matters: longer patterns first for greedy matching)"
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.element.fpb",
          "match": "\\b(product|energy|information|process_operator|technical_resource)\\b",
          "comment": "Element type keywords"
        },
        {
          "name": "keyword.other.fpb",
          "match": "\\b(title|system)\\b",
          "comment": "Other keywords"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.identifier.fpb",
          "match": "\\b[a-zA-Z_]\\w*\\b",
          "comment": "Identifiers (element IDs, etc.)"
        }
      ]
    }
  }
}
